{
	"name": "zork-ts",
	"version": "1.0.0",
	"description": "A text-based adventure game bot for Telegram, inspired by Zork.",
	"keywords": [
		"zork",
		"bot",
		"telegram"
	],
	"homepage": "git+https://github.com/lucasluizss/zork-ts#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lucasluizss/zork-ts.git"
	},
	"license": "GPL-3.0",
	"author": "Lucas Silva",
	"main": "dist/main.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "tsx watch src/main.ts",
		"d:build": "docker build -t zork-bot .",
		"d:run": "docker run -d --name zork-bot --env-file .env zork-bot",
		"start": "node dist/main.js",
		"server": "nohup npm start > bot.log 2>&1 &",
		"start:console": "tsx src/system/app.ts"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"telegraf": "^4.16.3",
		"telegraf-session-local": "^2.1.1",
		"tslog": "^4.10.2"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.21.0",
		"typescript": "^4.5.5"
	},
	"engines": {
		"node": "22.18.0",
		"npm": "11.6.2"
	},
	"pkg": {
		"scripts": "require.js",
		"assets": [
			"src/assets/**/*"
		]
	}
}
